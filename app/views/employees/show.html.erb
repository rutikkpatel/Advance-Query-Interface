<!-- Employee Details Showing -->
<div class="container">
  <div class="flex-column set-center">
    <h1 class="text-center">Employee Details</h1>
    <div class="d-flex flex-column align-items-center">
      <div class="card text-center" style="width: 24rem;">
        <div class="card-body">
          <h4 class="card-title"><%= @employee.first_name + " " + @employee.last_name %> </h4>
          <hr>
          <p class="card-text"> <strong> ID : </strong> <%=  @employee.id %> </p>
          <p class="card-text"> <strong> Email : </strong> <%=  @employee.email %> </p>
          <p class="card-text"> <strong> Age : </strong> <%=  @employee.age %> </p>
          <p class="card-text"> <strong> Gender : </strong> <%=  @employee.gender %> </p>
          <p class="card-text"> <strong> Designation : </strong> <%=  @employee.designation.designation_name %> </p>
          <p class="card-text"> <strong> Joining Date : </strong> <%=  @employee.joining_date %> </p>
          <p class="card-text"> <strong> Birthdate : </strong> <%=  @employee.birth_date %> </p>
          <p class="card-text"> <strong> Salary : </strong> <%=  @employee.salary %> </p>
          <p class="card-text"> <strong> Availability : </strong> <%=  @employee.availability %> </p>
        </div>
      </div>
      <div class="d-flex">
        <%= button_to "Edit Employee" , edit_employee_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "Delete Employee", employee_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "View all Employee", employees_path, method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
      </div>
    </div>
  </div>
</div>
