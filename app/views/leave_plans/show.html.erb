<!-- Leave Details Showing -->
<div class="container">
  <div class="flex-column set-center">
    <h1 class="text-center">Leave Full Details</h1>
    <div class="d-flex flex-column align-items-center">
      <div class="card text-center" style="width: 24rem;">
        <div class="card-body">
          <h4 class="card-title"><%= @leave_plan.employee.first_name + " " + @leave_plan.employee.last_name %> </h4>
          <hr>
          <p class="card-text"> <strong> ID : </strong> <%=  @leave_plan.id %> </p>
          <p class="card-text"> <strong> Type : </strong> <%=  @leave_plan.leave_type %> </p>
          <p class="card-text"> <strong> From : </strong> <%=  @leave_plan.leave_from %> </p>
          <p class="card-text"> <strong> To : </strong> <%=  @leave_plan.leave_to %> </p>
          <p class="card-text"> <strong> Reason : </strong> <%=  @leave_plan.leave_reason %> </p>
        </div>
      </div>
      <div class="d-flex">
        <%= button_to "Edit Leave" , edit_leave_plan_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "Delete Leave", leave_plan_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "View all Leave", leave_plans_path, method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
      </div>
    </div>
  </div>
</div>
