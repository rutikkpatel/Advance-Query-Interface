<div class="set-center flex-column form h-auto mt-3">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center mt-2">Designation Form</h2>
    </div>
    <div class="card-body">
      <!-- Form Started Here -->
      <%= form_with model: @designation do |f| %>
        <br>
        <%= f.label :designation_name, "Designation :", class:"mt-3" %>
        <%= f.text_field :designation_name, placeholder: "Enter Designation Here", class:"mb-2 form-control" %>
        <br>
        <div class="d-flex justify-content-center">
          <%= f.submit "Save Designation", class:"btn-secondary border-0 shadow py-2 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
